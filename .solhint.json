{
    "extends": "solhint:recommended",
    "plugins": [],
    "rules": {
        "compiler-version": ["error", "^0.8.21"],
        "reason-string": ["warn",{"maxLength":60}],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "ordering": "warn",
        "one-contract-per-file": "off",
        "not-rely-on-time": "off",
        "no-empty-blocks": "off",
        "avoid-low-level-calls": "off",
        "custom-errors": "off"
    }
}